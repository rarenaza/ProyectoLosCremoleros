<script>
    $(document).ready(function () {

        $("#divFinalCabecera").removeClass("color-paleta1 color-paleta2 color-paleta3 color-paleta4 color-paleta5 color-paleta6 color-paleta7 color-paleta8").addClass("color-paleta9")
        $('#PestañaConvenios').css('backgroundColor', '#f00');

        var $eventStartDate = $("#FechaInicio"),
            $eventEndDate = $("#FechaFin"),
            $duration = $('#PracticaDuracion'),
            $startMonth = $('#MesInicio'),
            $salario = $('#SalarioOfrecido'),
            $registerDate = $('#FechaRegistro'),
            $EJefe = $('#EnvioEvaluacionJefe'),
            $EAlumno = $('#EnvioFormatoInformeAlumno'),
            $EEvaluador = $('#EnvioEvaluacionEvaluador'),
            $RJefe = $('#RecepcionEvaluacionJefe'),
            $RAlumno = $('#RecepcionInformeAlumno'),
            $REvaluador = $('#RecepcionEvaluacionEvaluador');


        //$duration.val(($eventEndDate.data('DateTimePicker').diff($eventStartDate.data('DateTimePicker').date()) / 86400000).toFixed(0) + " días");

        $eventStartDate.datetimepicker({ format: "DD/MM/YYYY" });
        $eventEndDate.datetimepicker({ format: "DD/MM/YYYY" });
        $registerDate.datetimepicker({ format: "DD/MM/YYYY" });
        $EJefe.datetimepicker({ format: "DD/MM/YYYY" });
        $EAlumno.datetimepicker({ format: "DD/MM/YYYY" });
        $EEvaluador.datetimepicker({ format: "DD/MM/YYYY" });
        $RJefe.datetimepicker({ format: "DD/MM/YYYY" });
        $RAlumno.datetimepicker({ format: "DD/MM/YYYY" });
        $REvaluador.datetimepicker({ format: "DD/MM/YYYY" });

        $duration.val(($eventEndDate.data('DateTimePicker').date().diff($eventStartDate.data('DateTimePicker').date()) / 86400000).toFixed(0) + " días");
   
        $startMonth.val($eventStartDate.data('DateTimePicker').date().format('MMMM'));    
        $eventStartDate.on('dp.change', function (e) {
            $startMonth.val((e.date.format('MMMM')));
            $eventEndDate.data('DateTimePicker').minDate(e.date);
            var endDate = $eventEndDate.data('DateTimePicker').date();
            if (endDate) {
                $duration.val((endDate.diff(e.date) / 86400000).toFixed(0) + " días");
            }
        });

        $eventEndDate.on('dp.change', function (e) {
            $eventStartDate.data('DateTimePicker').maxDate(e.date);
            var startDate = $eventStartDate.data('DateTimePicker').date();
            if (startDate) {
                $duration.val((e.date.diff(startDate) / 86400000).toFixed(0) + " días");
            }
        });
    });
</script>